{
  "root": true,
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": [
    "@typescript-eslint"
  ],
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended"
  ],
  "rules": {
    "no-console": "off",

    // Use TypeScript-aware unused vars rule and ignore underscored args
    "no-unused-vars": "off",
    "@typescript-eslint/no-unused-vars": [
      "error",
      { "argsIgnorePattern": "^_", "varsIgnorePattern": "^_" }
    ],

    // Allow 'any' for now to avoid excessive noise in existing code
    "@typescript-eslint/no-explicit-any": "off",

    // Allow require() in TS files where needed (e.g. dynamic imports, Node globals)
    "@typescript-eslint/no-var-requires": "off"
  },
  "ignorePatterns": [
    "node_modules/",
    "dist/",
    "build/",
    "**/*.config.js"
  ]
}

